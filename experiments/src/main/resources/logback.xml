<configuration>
    <!-- 1. Appender: Defines where logs go (e.g., Console, File) -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- Pattern for log format -->
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 2. Logger: Fine-tune logging for specific packages -->
    <logger name="com.asteroid.duck" level="debug" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>
    <logger name="com.asteroid.duck.opengl.experiments" level="info" additivity="false">
        <appender-ref ref="STDOUT" />
    </logger>

    <!-- 3. Root Logger: The default logger for everything else -->
    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
